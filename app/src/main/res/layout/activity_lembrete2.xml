<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Lembrete2">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="106dp"
        android:layout_height="28dp"
        android:layout_marginTop="96dp"
        android:text="Data: 00/ 00/00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtMEs"
        android:layout_width="74dp"
        android:layout_height="48dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="MES"
        android:inputType="date"
        app:layout_constraintStart_toEndOf="@+id/txtAno"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/txtDia"
        android:layout_width="85dp"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="date"
        android:hint="DIA"
        app:layout_constraintStart_toEndOf="@+id/txtMEs"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/txtHora"
        android:layout_width="75dp"
        android:layout_height="44dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="time"
        android:hint="HORA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/txtAno"
        android:layout_width="86dp"
        android:layout_height="48dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="date"
        android:hint="ANO"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/btnLemb"
        android:layout_width="193dp"
        android:layout_height="74dp"
        android:layout_marginTop="76dp"
        android:text="DEFINIR IRNFORMAÇÕES"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TxtMin" />

    <EditText
        android:id="@+id/TxtMin"
        android:layout_width="75dp"
        android:layout_height="44dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="time"
        android:hint="MIN"
        app:layout_constraintStart_toEndOf="@+id/txtHora"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="76dp"
        android:layout_height="28dp"
        android:layout_marginTop="40dp"
        android:text="Hora: 00:00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMEs" />

</androidx.constraintlayout.widget.ConstraintLayout>