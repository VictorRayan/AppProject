<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Lembrete2">

    <EditText
        android:id="@+id/TxtMin"
        android:layout_width="75dp"
        android:layout_height="44dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:inputType="time"
        android:text="MIN"
        app:layout_constraintStart_toEndOf="@+id/txtHora"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="76dp"
        android:layout_height="28dp"
        android:layout_marginTop="36dp"
        android:text="Hora: 00:00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMEs" />

    <EditText
        android:id="@+id/txtDia"
        android:layout_width="85dp"
        android:layout_height="52dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:inputType="date"
        android:text="DIA"
        app:layout_constraintStart_toEndOf="@+id/txtMEs"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/txtAno"
        android:layout_width="86dp"
        android:layout_height="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:inputType="date"
        android:text="ANO"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/txtHora"
        android:layout_width="75dp"
        android:layout_height="44dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:inputType="time"
        android:text="HORA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/txtMEs"
        android:layout_width="74dp"
        android:layout_height="48dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:inputType="date"
        android:text="MES"
        app:layout_constraintStart_toEndOf="@+id/txtAno"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/txtDesc"
        android:layout_width="278dp"
        android:layout_height="106dp"
        android:layout_marginTop="88dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="DIGITE A DESCRIÇÃO DO EMPRESTIMO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnLemb"
        android:layout_width="193dp"
        android:layout_height="74dp"
        android:layout_marginTop="72dp"
        android:text="DEFINIR IRNFORMAÇÕES"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TxtMin" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="106dp"
        android:layout_height="28dp"
        android:layout_marginTop="52dp"
        android:text="Data: 00/ 00/00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDesc" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="272dp"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        android:text="Descrição do empréstimo: ex: A quem emprestou, qual o material, ie informações adicionais"
        app:layout_constraintBottom_toTopOf="@+id/txtDesc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>