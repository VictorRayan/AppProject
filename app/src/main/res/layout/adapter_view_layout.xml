<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/imgImagem"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@color/black" />

    <TextView
        android:id="@+id/txtNomeItem"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/imgImagem"
        android:background="#007F00"
        android:maxLength="30"
        android:maxLines="3"
        android:text="Nome do Item" />

    <TextView
        android:id="@+id/txtCategoria"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/txtNomeItem"
        android:background="#4daaff"
        android:text="Categoria do Item" />

    <TextView
        android:id="@+id/txtStatus"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/txtCategoria"
        android:background="#bf6767"
        android:text="Status do item" />



</RelativeLayout>